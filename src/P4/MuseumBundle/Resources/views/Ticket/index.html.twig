{# src/OC/PlatformBundle/Resources/views/Advert/index.html.twig #}

{% extends "P4MuseumBundle::layout.html.twig" %}

{% block title %}
  {{ 'Accueil'|trans }} - {{ parent() }}
{% endblock %}

{% block p4museum_body %}

  <h3>{{ 'index.message'|trans }}</h3>

  {{ 'Nos tarifs'|trans }} :

  <table class="table table-bordered table-responsive">
  <thead>
    <tr>
      <th>{{ 'Type de billet'|trans }}</th>
      <th>{{ 'Prix'|trans }}</th>
    </tr>
  </thead>
  <tbody>
  	<tr>
  		<td>{{ 'table.normal'|trans }}</td>
  		<td>16€</td>
  	</tr>
  	<tr>
  		<td>{{ 'table.children'|trans }}</td>
  		<td>8€</td>
  	</tr>
  	<tr>
  		<td>{{ 'table.senior'|trans }}</td>
  		<td>12€</td>
  	</tr>
  	<tr>
  		<td>{{ 'table.reduction'|trans }}<span id="asterisque">*</span></td>
  		<td>10€</td>
  	</tr>
  </tbody>
</table>

{% endblock %}
