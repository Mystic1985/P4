{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}Musée du Louvre{% endblock %}</title>

  {% block stylesheets %}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
  {% endblock %}
</head>

<body>
  <div class="container">
    <div id="header" class="jumbotron">
      <h1 class="text-center">Musée du Louvre</h1>
      <p class="text-center">
          {{ 'museum.subtitle'|trans}}
      </p>
      <div class="row">
      <p>
        <div class="text-center">
        <a class="btn btn-primary" href="{{ path('p4_museum_buy') }}">
          {{ 'Acheter des billets'|trans }}
        </a><br /><br />
      </div>
        <div class="text-center">
        <a class="btn btn-primary" href="{{ path('p4_museum_homepage') }}">
          {{ 'Accueil'|trans }}
        </a>
      </div>
      </p>
    </div>
    </div>

    <div class="row">
      <div id="content" class="col-md-12 text-center">
        {% block body %}
        {% endblock %}
      </div>
    </div>

    <hr>

    <footer class="text-center">
      <div class="col-md-12 text-center">
      <p>Musée du Louvre © {{ 'now'|date('Y') }}</p>
        {% if app.request.locale == 'fr' %}
            <a href="{{ en_url }}">English version</a>
        {% elseif app.request.locale == 'en' %}
            <a href="{{ fr_url }}">Version française</a>
        {% endif %}
      </div>
    </footer>
  </div>

  {% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="{{ asset('build/app.js') }}"></script>
  {% endblock %}

</body>
</html>